<h1>list all articles</h1>

<p>
<%= link_to "Create new article", new_article_path %>
</p>

<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
	</tr>
	
	<% @list_of_articles.each do |article_info| %>
	<tr>
		<td><%= article_info.title %> </td>
		<td><%= article_info.description %> </td>
		<td> <%= link_to 'Edit', edit_article_path(article_info) %></td>
		<td> <%= link_to 'Show', article_path(article_info) %> </td>
	</tr>
	<% end %>
</table>
